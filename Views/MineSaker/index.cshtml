@model PagedResult<KartverketGruppe5.Models.InnmeldingModel>
@{
    ViewData["Title"] = "Mine Innmeldinger";
}

<div class="w-full flex flex-col gap-2">
    <h1>Mine Saker</h1>

    <!-- Innmeldinger Liste -->
    <div class="space-y-4">
        @foreach (var innmelding in Model.Items)
        {
            <a asp-action="Behandle" asp-route-id="@innmelding.InnmeldingId" class="flex justify-between items-center p-4 bg-white rounded shadow">
                <div>
                    <p class="font-semibold">Kommune: @innmelding.KommuneNavn</p>
                    <p class="text-gray-600">@innmelding.Beskrivelse</p>
                </div>
                <div class="flex items-center gap-4">
                    <span class="text-gray-500">@innmelding.OpprettetDato.ToShortDateString()</span>
                    <span class="px-3 py-1 rounded-full @innmelding.StatusClass">@innmelding.Status</span>
                </div>
            </a>
        }
    </div>
</div>