@model KartverketGruppe5.Models.Saksbehandler

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Rediger saksbehandler</h3>
                    <form asp-action="Rediger" method="post">
                        <input type="hidden" asp-for="SaksbehandlerId" />
                        <div class="mb-3">
                            <label asp-for="Fornavn" class="form-label">Fornavn</label>
                            <input asp-for="Fornavn" class="form-control" required>
                            <span asp-validation-for="Fornavn" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Etternavn" class="form-label">Etternavn</label>
                            <input asp-for="Etternavn" class="form-control" required>
                            <span asp-validation-for="Etternavn" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" type="email" class="form-control" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Passord" class="form-label">Passord</label>
                            <input asp-for="Passord" type="password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Admin" class="form-label">Admin</label>
                            <input asp-for="Admin" type="checkbox" class="form-check-input">
                            <span asp-validation-for="Admin" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Lagre endringer</button>
                            <a asp-action="Index" class="btn btn-secondary">Avbryt</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 