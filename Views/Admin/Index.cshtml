@model IEnumerable<KartverketGruppe5.Models.Bruker>

<div class="container mt-4">
    <h2>Administrer Brukere</h2>
    
    <table class="table">
        <thead>
            <tr>
                <th>Navn</th>
                <th>Email</th>
                <th>Rolle</th>
                <th>Registrert</th>
                <th>Bruker ID</th>
                <th>Handling</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bruker in Model)
            {
                <tr>
                    <td>@bruker.Fornavn @bruker.Etternavn</td>
                    <td>@bruker.Email</td>
                    <td>@bruker.Rolle</td>
                    <td>@bruker.OpprettetDato.ToString("dd.MM.yyyy")</td>
                    <td>@bruker.BrukerId</td>
                    <td>
                        <form asp-controller="Bruker" asp-action="EndreRolle" method="post" class="d-inline">
                            <input type="hidden" name="brukerId" value="@bruker.BrukerId" />
                            <select name="nyRolle" class="form-select form-select-sm d-inline w-auto">
                                <option value="bruker" selected="@(bruker.Rolle == "bruker")">Bruker</option>
                                <option value="saksbehandler" selected="@(bruker.Rolle == "saksbehandler")">Saksbehandler</option>
                                <option value="admin" selected="@(bruker.Rolle == "admin")">Admin</option>
                            </select>
                            <button type="submit" class="btn btn-sm btn-primary">Oppdater</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="PopulateFylkerOgKommuner" method="post">
        <button type="submit" class="btn btn-primary">Oppdater Fylker og Kommuner</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">@TempData["Message"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }
</div> 