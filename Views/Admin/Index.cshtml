@model IEnumerable<KartverketGruppe5.Models.Saksbehandler>

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Saksbehandlere</h1>
    <a asp-action="Register" class="btn btn-primary mb-6">Registrer ny saksbehandler</a>

    <div class="bg-white rounded-lg shadow">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Navn
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Email
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Admin
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Opprettet
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Handlinger
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var saksbehandler in Model)
                {
                    <tr class="hover:bg-gray-50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="font-medium text-gray-900">@saksbehandler.Fornavn @saksbehandler.Etternavn</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@saksbehandler.Email</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-2">
                                <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full @(saksbehandler.Admin ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                    @(saksbehandler.Admin ? "Ja" : "Nei")
                                </span>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="text-sm text-gray-500">@saksbehandler.OpprettetDato.ToShortDateString()</div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a asp-action="Rediger" 
                               asp-route-id="@saksbehandler.SaksbehandlerId" 
                               class="btn bg-blue-500 text-white">
                                Rediger
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <form asp-action="PopulateFylkerOgKommuner" method="post" class="mt-6">
        <button type="submit" class="btn btn-primary">Oppdater Fylker og Kommuner</button>
    </form>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success mt-4">@TempData["Message"]</div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger mt-4">@TempData["Error"]</div>
    }
</div> 