@model KartverketGruppe5.Models.User
@{
    ViewData["Title"] = "Logg inn";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title text-center">Logg inn</h3>
                    <form asp-action="Index" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="passord" class="form-label">Passord</label>
                            <input type="password" class="form-control" id="passord" name="passord" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Logg inn</button>
                            <a asp-action="Register" class="btn btn-link">Registrer ny bruker</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 