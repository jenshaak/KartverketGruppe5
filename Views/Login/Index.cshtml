@model KartverketGruppe5.Models.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Logg inn";
}

<div class="flex flex-col justify-center items-center h-screen w-full bakgrunn-bilde-skog">
    <form asp-action="HandleLogin" method="post" class="form-element bg-bg/85">
    <!-- <partial name="_Notifications" />  -->
    <partial name="_Notifications" /> 
        <img src="~/bilder/kartverket-logo-large.svg" alt="Kartverket logo" class="w-auto h-12">
        <div asp-validation-summary="ModelOnly" class="text-error"></div>
        <div class="flex flex-col gap-4">
            <div class="flex flex-col gap-1">
                <div class="input-div">
                    <i class="ph ph-envelope ph-lg"></i>
                    <input asp-for="Email" type="email" placeholder="Email" />
                </div>
                <span asp-validation-for="Email" class="text-error text-sm"></span>
            </div>
            <div class="flex flex-col gap-1">
                <div class="input-div">
                    <i class="ph ph-lock ph-lg"></i>
                    <input asp-for="Password" type="password"placeholder="Passord" />
                </div>
                <span asp-validation-for="Password" class="text-error text-sm"></span>
            </div>
        </div>
        <div class="flex flex-col items-center gap-2 w-full">   
            <button type="submit" class="btn btn-wide btn-primary">Logg inn</button>
            <div class="text-base">Eller</div>
            <a asp-action="Register" class="underline text-blue-600 text-base">Registrer ny bruker</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 